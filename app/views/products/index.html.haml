- Category.all.each do |category|
  = link_to category.name, weekday_products_path(category: category.name)


- if @products.present?
  - @products.each do |product|
    %h2= link_to product.title.humanize, [weekday, product]
    %p= product.price
- else
  %h2 No products

= link_to 'New Product', new_weekday_product_path
