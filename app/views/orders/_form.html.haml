.box-body
  .form-group
    = simple_form_for [weekday, order], html: { multipart: true } do |f|
      - Category.all.each do |category|

        = f.association :products, label: category.name, collection: @products.where(category: category), :label_method => lambda { |product| "#{product.title}, #{number_to_currency(product.price, locale: :ru)}" }
      - if (@weekday.date.to_date == Date.today)
        = f.button :submit, class: 'btn btn-primary'
