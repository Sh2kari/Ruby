.content
  .row
    .col-md-12
      - if @weekdays.present?
        %ul.list-unstyled
          - @weekdays.each do |weekday|
            .col-xs-6.col-sm-5.col-md-4.col-lg-3
              .thumbnail.text-center
                .caption
                  %p= image_tag weekday.cover.url
                  %li= link_to weekday.title.humanize, new_weekday_order_path(weekday), class: 'active'
                  - if can? :manage, Order
                    %li= link_to 'Show Orders', weekday_orders_path(weekday), class: 'active'
      - else
        %h2 No weekdays
